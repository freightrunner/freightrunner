<div class="row">
  <div class="col-sm-5">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "well"}) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
      <legend>Sign Up</legend>

        <%= f.input :account_name, :url => autocomplete_account_name_suggestions_path %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>

        <div><%= f.button :submit, "Sign up" %></div>
        </fieldset>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="col-sm-7">
    <h2>You must have a company account to create a new user!</h2>
    <p>If you do not have an account yet, sign up here: <%= link_to "new account", new_account_registration_path %></p>
  </div>
</div>
