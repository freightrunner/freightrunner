<%= simple_form_for(@load) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :origin %>
    <%= f.input :pick_date %>
   	<%= f.input :pick_time %>
    <%= f.input :destination %>
    <%= f.input :drop_date %>
    <%= f.input :drop_time %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
